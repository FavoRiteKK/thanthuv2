<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@color/gg_share_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="left"
            android:layout_width="@dimen/gg_logo_width"
            android:layout_height="@dimen/gg_logo_height"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="@null"/>
        <TextView
            android:textSize="@dimen/gg_fourteen_sp"
            android:textColor="@color/gg_black"
            android:layout_gravity="center"
            android:id="@+id/gg_tv_sharebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="Share"/>
    </FrameLayout>
    <EditText
        android:textColor="@color/gg_black"
        android:gravity="top"
        android:id="@+id/gg_et_share"
        android:background="@color/gg_white"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/gg_white"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/gg_iv_share_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="140dp"
            android:maxHeight="140dp"
            android:contentDescription="@null"/>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/gg_white"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp">
            <TextView
                android:textSize="@dimen/gg_fourteen_sp"
                android:textColor="@color/gg_black"
                android:id="@+id/gg_tv_share_appname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/gg_ten_sp"
                android:id="@+id/gg_tv_share_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/gg_twelve_sp"
                android:id="@+id/gg_tv_share_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
