<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/gg_shape_corner_outline"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="289dp"
        android:layout_height="272dp">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="18dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/gg_iv_return"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/gg_ui_iv_return"
                android:contentDescription="@null"/>
            <TextView
                android:textSize="@dimen/gg_sixteen_sp"
                android:textColor="@color/gg_ui_orange"
                android:layout_gravity="center"
                android:id="@+id/gg_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gg_title_register_by_phone_number"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/gg_iv_close"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/gg_ui_iv_close"
                android:contentDescription="@null"/>
        </FrameLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:background="@drawable/gg_shape_account_corner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="29dp">
            <ImageView
                android:id="@+id/gg_iv_phone_number_prompt"
                android:background="@drawable/gg_ui_login_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/gg_iv_phone_number_prompt">
                <EditText
                    android:textSize="@dimen/gg_sixteen_sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/gg_et_phone_number"
                    android:background="@null"
                    android:paddingLeft="5dp"
                    android:paddingRight="57dp"
                    android:nextFocusDown="@+id/gg_et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/gg_phone_number_hint"
                    android:singleLine="true"
                    android:maxLength="32"
                    android:inputType="phone"
                    android:imeOptions="actionNext"
                    android:imeActionLabel="Next"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/gg_iv_phone_number_clear"
                    android:visibility="gone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/gg_icon_input_clear"
                    android:contentDescription="@null"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/gg_iv_phone_number_alert"
                    android:visibility="gone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/gg_icon_input_alert"
                    android:contentDescription="@null"/>
            </FrameLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:background="@drawable/gg_shape_account_corner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="13dp">
            <ImageView
                android:id="@+id/gg_iv_password_prompt"
                android:background="@drawable/gg_ui_login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/gg_iv_password_prompt">
                <EditText
                    android:textSize="@dimen/gg_sixteen_sp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/gg_et_password"
                    android:background="@null"
                    android:paddingLeft="5dp"
                    android:paddingRight="57dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/gg_register_password_hint"
                    android:singleLine="true"
                    android:maxLength="32"
                    android:inputType="textVisiblePassword"
                    android:imeOptions="actionDone"
                    android:imeActionLabel="Next"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/gg_iv_password_clear"
                    android:visibility="gone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="45dp"
                    android:src="@drawable/gg_icon_input_clear"
                    android:contentDescription="@null"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/gg_iv_password_alert"
                    android:visibility="gone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="45dp"
                    android:src="@drawable/gg_icon_input_alert"
                    android:contentDescription="@null"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/gg_iv_eye"
                    android:background="@drawable/gg_ui_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:contentDescription="@null"/>
            </FrameLayout>
        </RelativeLayout>
        <Button
            android:textSize="@dimen/gg_sixteen_sp"
            android:textColor="@color/gg_white"
            android:layout_gravity="center"
            android:id="@+id/gg_btn_phone_registered_next"
            android:background="@drawable/gg_shape_loginbutton_corner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="13dp"
            android:text="@string/gg_phone_registered_next_text"/>
        <TextView
            android:textSize="@dimen/gg_sixteen_sp"
            android:textColor="@color/gg_dark_grey"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/gg_btn_other_register_methods"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="22dp"
            android:text="@string/gg_other_register_methods"/>
    </LinearLayout>
</LinearLayout>
