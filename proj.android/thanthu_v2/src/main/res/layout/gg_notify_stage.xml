<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/gg_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:layout_below="@+id/gg_tv_title"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:textSize="@dimen/gg_twenty_four_sp"
        android:textColor="@color/gg_ui_orange"
        android:id="@+id/gg_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <WebView
        android:id="@+id/gg_webview_notify"
        android:background="@drawable/gg_stage_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"/>
    <Button
        android:textSize="@dimen/gg_sixteen_sp"
        android:textColor="@color/gg_white"
        android:id="@+id/gg_btn_confirm"
        android:background="@drawable/gg_shape_loginbutton_corner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=""
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
