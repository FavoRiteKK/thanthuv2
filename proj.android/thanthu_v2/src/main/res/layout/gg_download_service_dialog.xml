<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/gg_dialog_gray"
        android:layout_width="@dimen/gg_one_hundred_eighty_dp"
        android:layout_height="@dimen/gg_one_hundred_eighty_dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="100"
            android:indeterminate="false"
            android:progressDrawable="@drawable/gg_circle_progress_background"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleHorizontal"/>
        <ProgressBar
            android:id="@+id/gg_progress_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:indeterminate="false"
            android:progressDrawable="@drawable/gg_circle_progress_foreground"
            android:layout_centerInParent="true"
            android:rotation="-90"
            style="?android:attr/progressBarStyleHorizontal"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:textSize="@dimen/gg_twelve_sp"
                android:textColor="@color/gg_pb_gray"
                android:layout_gravity="center"
                android:id="@+id/gg_download_title"
                android:paddingBottom="@dimen/gg_five_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/gg_sixteen_sp"
                android:textStyle="bold"
                android:textColor="@color/gg_pb_white"
                android:layout_gravity="center"
                android:id="@+id/gg_download_progress_text"
                android:paddingBottom="@dimen/gg_five_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/gg_twelve_sp"
                android:textColor="@color/gg_pb_gray"
                android:layout_gravity="center"
                android:id="@+id/gg_download_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
