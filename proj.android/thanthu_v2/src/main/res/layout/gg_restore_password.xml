<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/gg_shape_corner_outline"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="289dp"
        android:layout_height="272dp">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/gg_iv_return"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/gg_ui_iv_return"
                android:contentDescription="@null"/>
            <TextView
                android:textSize="@dimen/gg_sixteen_sp"
                android:textColor="@color/gg_ui_orange"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gg_title_restore_password"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/gg_iv_close"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/gg_ui_iv_close"
                android:contentDescription="@null"/>
        </FrameLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp">
            <FrameLayout
                android:id="@+id/edittext"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <EditText
                    android:textSize="@dimen/gg_sixteen_sp"
                    android:textColor="@color/gg_black"
                    android:gravity="center"
                    android:id="@+id/gg_et_verify_code"
                    android:background="@drawable/gg_shape_account_corner"
                    android:layout_width="157dp"
                    android:layout_height="40dp"
                    android:hint="@string/gg_resend_enter_verification_code"
                    android:maxLength="6"
                    android:inputType="number"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/gg_iv_verify_code_clear"
                    android:visibility="gone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/gg_icon_input_clear"
                    android:contentDescription="@null"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/gg_iv_verify_code_alert"
                    android:visibility="gone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/gg_icon_input_alert"
                    android:contentDescription="@null"/>
            </FrameLayout>
            <TextView
                android:textSize="@dimen/gg_sixteen_sp"
                android:textColor="@color/gg_black"
                android:gravity="center"
                android:id="@+id/gg_btn_get_validate_code"
                android:background="@drawable/gg_shape_account_corner"
                android:layout_width="92dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:text="@string/gg_resend_password_by_get_validate_code"
                android:layout_toRightOf="@+id/edittext"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/gg_shape_account_corner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/gg_iv_password_prompt"
                android:background="@drawable/gg_ui_login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:contentDescription="@null"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/gg_iv_password_prompt">
                <EditText
                    android:textSize="@dimen/gg_sixteen_sp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/gg_et_password"
                    android:background="@null"
                    android:paddingLeft="5dp"
                    android:paddingRight="57dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/gg_resend_password_by_enter_password"
                    android:singleLine="true"
                    android:maxLength="32"
                    android:inputType="textVisiblePassword"
                    android:imeOptions="actionDone"
                    android:imeActionLabel="Next"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/gg_iv_password_clear"
                    android:visibility="gone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="45dp"
                    android:src="@drawable/gg_icon_input_clear"
                    android:contentDescription="@null"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/gg_iv_password_alert"
                    android:visibility="gone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="45dp"
                    android:src="@drawable/gg_icon_input_alert"
                    android:contentDescription="@null"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/gg_iv_eye"
                    android:background="@drawable/gg_ui_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:contentDescription="@null"/>
            </FrameLayout>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/gg_sixteen_sp"
            android:textColor="@color/gg_white"
            android:gravity="center"
            android:id="@+id/gg_btn_confirm"
            android:background="@drawable/gg_shape_loginbutton_corner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="21dp"
            android:text="@string/gg_resend_password_by_confirm"/>
    </LinearLayout>
</LinearLayout>
