<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/gg_tv_online_service_close"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/gg_ui_iv_close"
            android:contentDescription="@null"/>
        <TextView
            android:textSize="@dimen/gg_sixteen_sp"
            android:textColor="@color/gg_ui_orange"
            android:layout_gravity="center"
            android:id="@+id/gg_iv_online_service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gg_online_service"/>
        <TextView
            android:textColor="@color/gg_ui_orange"
            android:layout_gravity="center"
            android:id="@+id/gg_tv_online_service_refresh"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/gg_online_service_refresh"/>
    </FrameLayout>
    <WebView
        android:id="@+id/gg_webview_user_center_online_service"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
