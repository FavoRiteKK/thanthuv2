<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/gg_download_image"
        android:layout_width="@dimen/gg_fourty_dp"
        android:layout_height="@dimen/gg_fourty_dp"
        android:layout_margin="@dimen/gg_five_dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/gg_fourty_dp"
        android:layout_toRightOf="@+id/gg_download_image"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="@dimen/gg_fifteen_sp"
            android:textStyle="bold"
            android:textColor="@color/gg_pb_white"
            android:layout_gravity="center"
            android:id="@+id/gg_download_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/gg_progress_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/gg_five_dp"
            style="?android:attr/progressBarStyleHorizontal"/>
        <TextView
            android:textSize="@dimen/gg_twelve_sp"
            android:textColor="@color/gg_text_gray"
            android:layout_gravity="center"
            android:id="@+id/gg_download_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
